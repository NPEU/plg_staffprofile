<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="profile">
        <fieldset
            name="internal_fields"
            label="PLG_USER_STAFFPROFILE_INTERNAL_TITLE"
            description="PLG_USER_STAFFPROFILE_INTERNAL_MESSAGE"
        >
            <field
                name="tel"
                id="tel"
                type="text"
                label="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_OFFICE_TEL_LABEL"
                description="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_OFFICE_TEL_DESC"
                message="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_OFFICE_TEL_MESSAGE"
                filter="string"
                size="30"
            />
            <field
                name="room"
                id="room"
                type="text"
                label="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_ROOM_NUMBER_LABEL"
                description="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_ROOM_NUMBER_DESC"
                message="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_ROOM_NUMBER_MESSAGE"
                filter="string"
                size="30"
                hint="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_ROOM_NUMBER_HINT"
            />
            <field
                name="alias"
                id="alis"
                type="text"
                label="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ALIAS_LABEL"
                description="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ALIAS_DESC"
                message="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ALIAS_MESSAGE"
                readonly="true"
            />
        </fieldset>
        <fieldset
            name="public_fields"
            label="PLG_USER_STAFFPROFILE_PUBLIC_TITLE"
        >
            <field
                name="displaygroup"
                id="displaygroup"
                type="list"
                label="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_DISPLAYGROUP_LABEL"
                description="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_DISPLAYGROUP_DESC"
                message="PLG_USER_STAFFPROFILE_INTERNAL_FIELD_DISPLAYGROUP_MESSAGE"
                required="true"
                default="Staff"
            >
                <option value="Director">Director</option>
                <option value="Staff">Staff</option>
                <option value="Visitors and students">Visitors and students</option>
            </field>
            <field
                name="role"
                id="role"
                type="text"
                label="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ROLE_LABEL"
                description="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ROLE_DESC"
                message="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_ROLE_MESSAGE"
                filter="string"
                size="36"
                required="true"
            />
            <field
                name="title"
                id="title"
                type="text"
                label="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_TITLE_LABEL"
                description="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_TITLE_DESC"
                message="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_TITLE_MESSAGE"
                filter="string"
                size="30"
                hint="Optional"
            />
            <field
                name="qualifications"
                id="qualifications"
                type="text"
                label="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_QUALS_LABEL"
                description="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_QUALS_DESC"
                message="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_QUALS_MESSAGE"
                filter="string"
                size="30"
                hint="Optional"
            />
            <field
                name="avatar_img"
                id="avatar_img"
                type="imageedit"
                label="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_IMAGEEDIT_LABEL"
                label_can_edit="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_IMAGEEDIT_CAN_EDIT_LABEL"
                label_empty="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_IMAGEEDIT_EMPTY_LABEL"
                description="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_IMAGEEDIT_DESC"
                message="PLG_USER_STAFFPROFILE_PUBLIC_FIELD_IMAGEEDIT_MESSAGE"
            />
        </fieldset>
        <fieldset
            name="connections_fields"
            label="PLG_USER_STAFFPROFILE_CONNECITONS_TITLE"
        >
            <field
                name="x"
                id="x"
                type="text"
                label="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_X_LABEL"
                description="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_X_DESC"
                message="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_X_MESSAGE"
                hint="Optional"
                prefix="https://x.com/"
                pattern="^[A-Za-z0-9_]{1,32}$"
            />
            <field
                name="linkedin"
                id="linkedin"
                type="text"
                label="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_LINKEDIN_LABEL"
                description="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_LINKEDIN_DESC"
                message="PLG_USER_STAFFPROFILE_CONNECITONS_FIELD_LINKEDIN_MESSAGE"
                hint="Optional"
                prefix="https://www.linkedin.com/in/"
                pattern="[A-z0-9_-]+"
            />
        </fieldset>
